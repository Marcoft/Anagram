<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StartActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/line_setting"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="#ffffff"
        >


        <ImageButton
            android:visibility="gone"
            android:enabled="true"
            android:clickable="true"
            android:onClick="HelpOnAplication"
            android:id="@+id/Helpfull"
            android:layout_marginLeft="15dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_live_help_black_24dp"
            android:layout_alignParentLeft="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>


        <RelativeLayout
            android:clickable="true"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_margin="5dp"
            android:background="@drawable/gradient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/money_main"
                android:gravity="center"
                android:textColor="#000"
                android:text="0"
                android:textSize="23sp" />

            <ImageView
                android:id="@+id/score"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="10dp"
                android:layout_toRightOf="@id/money_main"
                android:background="@drawable/crowncoin"
                android:backgroundTint="@color/Black"
                android:textSize="12sp" />
        </RelativeLayout>


    </RelativeLayout>

    <RelativeLayout
        android:padding="5dp"
        android:background="@drawable/buttons"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:orientation="vertical">

            <TextView

                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:id="@+id/textAnagr"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Анаграммы"
                android:textStyle="bold"
                android:textSize="25dp"/>

        <LinearLayout
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="130dp"
            android:orientation="vertical">


            <ProgressBar
                android:id="@+id/progressAnagram"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:backgroundTint="@color/White"
                android:max="100"
                android:progress="0" />

            <TextView
                android:id="@+id/progressTextAnagram"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="5dp"
                android:gravity="right"
                android:text="0/100%" />

            <Button
                android:gravity="bottom|right"
                android:layout_gravity="bottom|right"
                android:enabled="true"
                style="@style/CustomButtonStyle"
                android:layout_marginBottom="10dp"
                android:onClick="GoAnagram"
                android:layout_marginTop="5dp"
                android:id="@+id/startAnagr"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="Играть"/>


        </LinearLayout>


    </RelativeLayout>

    <RelativeLayout
        android:padding="5dp"
        android:background="@drawable/buttons"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:orientation="vertical">

        <TextView

            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:id="@+id/textAnagrFruit"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Анаграммы\n(Фрукты,Ягоды)"
            android:textStyle="bold"
            android:textSize="25dp"/>

        <LinearLayout
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="130dp"
            android:orientation="vertical">


            <ProgressBar
                android:layout_marginTop="5dp"
                android:id="@+id/progressAnagramFruit"
                android:layout_marginRight="10dp"
                style="?android:attr/progressBarStyleHorizontal"
                android:max="100"
                android:progress="0"
                android:backgroundTint="@color/colorAppDivider"
                android:layout_width="150dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/progressTextAnagramFruit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="5dp"
                android:gravity="right"
                android:text="0/100%" />


            <Button
                android:id="@+id/startAnagrFruit"
                style="@style/CustomButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:enabled="true"
                android:gravity="bottom|right"
                android:onClick="GoAnagramFruit"
                android:text="Играть"
                android:textSize="20dp" />


        </LinearLayout>


    </RelativeLayout>

    <RelativeLayout
        android:padding="5dp"
        android:background="@drawable/buttons"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:orientation="vertical">

        <TextView

            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:id="@+id/textAnagrVegetab"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Анаграммы\n(Овощи)"
            android:textStyle="bold"
            android:textSize="25dp"/>

        <LinearLayout
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="130dp"
            android:orientation="vertical">


            <ProgressBar
                android:layout_marginTop="5dp"
                android:id="@+id/progressAnagramVegetable"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:backgroundTint="@color/colorAppDivider"
                android:max="100"
                android:progress="0" />

            <TextView
                android:id="@+id/progressTextAnagramVegetable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="5dp"
                android:gravity="right"
                android:text="0/100%"  />

            <Button
                android:layout_gravity="right"
                android:gravity="right"
                android:enabled="true"
                style="@style/CustomButtonStyle"
                android:layout_marginBottom="10dp"
                android:onClick="GoAnagramVegetables"
                android:layout_marginTop="5dp"
                android:id="@+id/startAnagrVegetabl"
                android:layout_alignParentRight="true"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="Играть"/>


        </LinearLayout>


    </RelativeLayout>


    <RelativeLayout
        android:padding="5dp"
        android:background="@drawable/buttons"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="110dp"
       >


        <TextView
            android:id="@+id/DecryptAnagram"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="Расшифруйте\nАнаграмму"
            android:textSize="25dp"
            android:textStyle="bold" />

            <Button
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:enabled="true"
                style="@style/CustomButtonStyle"
                android:id="@+id/startAnagrDecrypt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:onClick="GoAnagramDecrypt"
                android:text="Купить"
                android:textSize="20dp" />



    </RelativeLayout>

    <RelativeLayout
        android:padding="5dp"
        android:background="@drawable/buttons"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="110dp"
       >


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:text="Анаграммы\nЗагадки"
            android:textSize="25dp"
            android:textStyle="bold" />


        <Button
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="20dp"
            android:gravity="right"
            android:layout_gravity="right"
            android:enabled="true"
            style="@style/CustomButtonStyle"
            android:onClick="GoAnagramRiddle"
            android:layout_marginTop="5dp"
            android:id="@+id/startAnagrRiddle"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="Купить"/>


    </RelativeLayout>

        <RelativeLayout
            android:layout_marginBottom="20dp"
            android:padding="5dp"
            android:background="@drawable/buttons"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="110dp">

            <TextView

                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:id="@+id/textAnagrSomeMore"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Несколько\nответов"
                android:textStyle="bold"
                android:textSize="25dp"/>

            <LinearLayout
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="130dp"
                android:orientation="vertical">


                <ProgressBar
                    android:layout_marginTop="5dp"
                    android:id="@+id/progressAnagramSomeMore"
                    android:layout_marginRight="10dp"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:max="100"
                    android:progress="0"
                    android:backgroundTint="@color/colorAppDivider"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/progressTextAnagramSomeMore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0/100%"
                    android:gravity="right"
                    android:layout_gravity="right"
                    android:layout_marginRight="5dp"/>

                <Button
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:enabled="true"
                    style="@style/CustomButtonStyle"
                    android:layout_marginBottom="10dp"
                    android:onClick="GoAnagramSomeMore"
                    android:layout_marginTop="5dp"
                    android:id="@+id/startAnagrSomeMore"
                    android:layout_alignParentRight="true"
                    android:textSize="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="Закрыто"/>


            </LinearLayout>


        </RelativeLayout>

    </LinearLayout>

</ScrollView>